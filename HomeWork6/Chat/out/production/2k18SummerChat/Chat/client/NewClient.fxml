<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112-ea"  fx:controller="Chat.client.NewClientController">
    <Label fx:id="lblLogin" text="Логин" VBox.vgrow="ALWAYS"/>
    <TextArea fx:id="textLogin" promptText="Логин" VBox.vgrow="ALWAYS"/>
    <Label fx:id="lblPswd" text="Пароль" VBox.vgrow="ALWAYS"/>
    <TextArea fx:id="textPass" promptText="Пароль" VBox.vgrow="ALWAYS"/>
    <Label fx:id="lblNick" text="Ник" VBox.vgrow="ALWAYS"/>
    <TextArea fx:id="textNick" promptText="Ник" VBox.vgrow="ALWAYS"/>
    <Button text="Зарегистрировать" fx:id="btn" onAction="#btnClick"/>
</VBox>